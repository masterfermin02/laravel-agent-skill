{
    "name": "fperdomo/laravel-best-practices-skill-installer",
    "description": "Publishes a Codex-friendly agent skill: skills/laravel-best-practices",
    "type": "library",
    "license": "MIT",
    "version": "1.0.0",
    "require": {
        "php": ">=8.1",
        "illuminate/support": "^10.0|^11.0|^12.0"
    },
    "autoload": {
        "psr-4": {
            "FPerdomo\\LaravelBestPracticesSkillInstaller\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "FPerdomo\\LaravelBestPracticesSkillInstaller\\LaravelBestPracticesSkillInstallerServiceProvider"
            ]
        }
    },
    "require-dev": {
        "orchestra/testbench": "^10.9",
        "pestphp/pest": "^4.3"
    },
    "autoload-dev": {
        "psr-4": {
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/",
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve --ansi"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
